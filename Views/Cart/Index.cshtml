@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- gallery section -->
<section style="background-color: #f5f5f5;" class="gallery_section layout_padding">

    <div style="margin-bottom: 30px;" class="heading_container justify-content-center">
        <h2>
            Cart
        </h2>
    </div>
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive ">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th></th>
                            <th>Sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Tổng</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        <tr>
                            <td style="width: 120px;"><img src="~/Picture/productImgs/ProductNoBG_2.jpg" alt="" style="width: 50px;"></td>
                            <td class="align-middle"> Đèn ngủ hoa Cẩm Tú Cầu</td>
                            <td class="align-middle">350.000₫ </td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto " style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-minus">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" class="form-control form-control-sm border-0 text-center" style="background-color: #dbdbdb" value="1">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-plus">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">350.000₫ </td>
                            <td class="align-middle"><button class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></td>
                        </tr>
                    </tbody>



                    <tbody class="align-middle">
                        <tr>
                            <td style="width: 120px;"><img src="~/Picture/productImgs/ProductNoBG_1.jpg" alt="" style="width: 50px;"></td>
                            <td class="align-middle"> Đèn ngủ Hoa Tulip</td>
                            <td class="align-middle">300.000₫ </td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-minus">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value="1">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-plus">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">300.000₫ </td>
                            <td class="align-middle"><button class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></td>
                        </tr>
                    </tbody>


                    <tbody class="align-middle">
                        <tr>
                            <td style="width: 120px;"><img src="~/Picture/productImgs/ProductNoBG_4.jpg" alt="" style="width: 50px;"></td>
                            <td class="align-middle"> Đèn ngủ Hoa Hồng</td>
                            <td class="align-middle">250.000₫ </td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-minus">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value="1">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-plus">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">250.000₫ </td>
                            <td class="align-middle"><button class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></td>
                        </tr>
                    </tbody>

                </table>
            </div>





            <div class="col-lg-4">
                <form style="background-color: #fff;" class="mb-30" action="">
                    <div class="input-group">
                        <input type="text" class="form-control border-0 p-4" placeholder="Mã giảm giá">
                        <div class="input-group-append">
                            <button class="btn btn-primary">Áp dụng mã giảm giá</button>
                        </div>
                    </div>
                </form>
                <h5 class="section-title position-relative text-uppercase mb-3"><span>Tóm tắt giỏ hàng</span></h5>

                <div style="background-color: #ffffff; margin-bottom: 5000px;" class="p-30 mb-5">
                    <h6 class="mb-3" style="font-size: 19px; font-weight: bold; margin-bottom: 50px;">Danh sách sản phẩm</h6>

                    <div class="border-bottom pb-2 ">

                        <div class="d-flex justify-content-between mb-3 mt-3">
                            <h6>Đèn ngủ hoa Cẩm Tú Cầu <span>x 1</span></h6>
                            <h6>350.000₫</h6>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Đèn ngủ hoa Tulip <span>x 1</span></h6>
                            <h6>300.000₫</h6>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Đèn ngủ hoa Hồng <span>x 1</span></h6>
                            <h6>250.000₫</h6>
                        </div>
                    </div>
                    <div class="border-bottom pb-2">

                        <div class="d-flex justify-content-between mb-3 mt-3">
                            <h6>Tổng phụ</h6>
                            <h6>900.000₫</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">25.000₫</h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Tổng Tiền</h5>
                            <h5>925.000₫</h5>
                        </div>
                        <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Tiến hành thanh toán</button>
                    </div>
                </div>
            </div>

        </div>
    </div>

</section>
<!-- end gallery section -->